<view class="container">
  <view wx:if="{{loading}}">加载中...</view>
  <block wx:else>
    <block wx:if="{{list.length}}">
      <block wx:for="{{list}}" wx:key="reservation_id">
        <view class="card">
          <view class="title">预约 #{{item.reservation_id}}</view>
          <view class="meta">课程ID：{{item.course_id}}</view>
          <view class="meta">用户ID：{{item.user_id}}</view>
          <view class="meta">状态：{{item.status}}</view>
          <view class="meta">创建时间：{{item.created_at}}</view>
        </view>
      </block>
    </block>
    <view wx:else class="empty">暂无预约</view>
  </block>
</view>

